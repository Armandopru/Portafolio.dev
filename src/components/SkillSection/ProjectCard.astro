---
// Props para la imagen y el t√≠tulo del proyecto
interface Props {
  image: string;
  title: string;
}

const { image, title } = Astro.props;
---

<div class="project-card">
  <img src={image} alt={title} class="project-image" />
  <h3 class="project-title">{title}</h3>
</div>

<style>
  .project-card {
    background-color: #191919;
    border-radius: 8px;
    overflow: hidden;
    text-align: center;
  }

  .project-image {
    width: 100%;
    height: auto;
  }

  .project-title {
    padding: 0.75rem;
    font-size: 1.25rem;
    color: white;
  }
</style>
