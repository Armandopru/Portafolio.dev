---
import SkillCard from './ToolsCard.astro';

// Datos para las habilidades
const skills = [
  {
    title: 'SS',
    description: 'SS',
    icon: '/src/components/Icons/user.svg' 
  },
  {
    title: 'SS',
    description: 'SS',
    icon: './icons/user.svg'
  },
  {
