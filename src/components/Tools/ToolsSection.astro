    icon: './icons/user.svg'
  },


];
---

<section class="tools-section">
  <h2>Herramientas de Trabajo</h2>
  <div class="tools-grid">
    {skills.map(skill => (
      <SkillCard {...skill} />
    ))}
  </div>
  <a href="/skills" class="view-more-button">Contactame</a>
</section>

<style>
  .tools-section {
    text-align: center;
    color: #A855F7; /* color morado para el encabezado */
    padding: 4rem 0;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .view-more-button {
    display: inline-block;
    margin-top: 2rem;
    padding: 0.75rem 2rem;
    background-color: #A855F7; /* morado */
    color: white;
    border-radius: 8px;
    text-decoration: none;
  }

  .view-more-button:hover {
    background-color: #8b2fc7; /* morado m√°s oscuro al pasar el cursor */
  }
</style>
