---
// Props for title, description, and icon
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="tool-card">
  <img src={icon} alt={title} class="icon" />
  <h3>{title}</h3>
  <p>{description}</p>
</div>

<style>
  .tool-card {
    background-color: #191919;
    color: white;
    padding: 1.5rem;
    border-radius: 8px;
    text-align: center;
    width: 100%;
    max-width: 300px;
    margin: 1rem auto;
  }

  .icon {
    font-size: 2rem;
    color: #A855F7; /* purple color */
    margin-bottom: 0.5rem;
  }

  h3 {
    font-size: 1.25rem;
    margin: 0.5rem 0;
  }

  p {
    font-size: 1rem;
    color: #A3A3A3;
  }
</style>
